@model jayatechTest.Models.User_Message
<h2>Soccer Chat</h2>
<div class="container" style="width:80%; margin-top:2%">
    @foreach (var item in ViewBag.listMessage)
    {
    <label>@item</label><br />
    }

    @using (Html.BeginForm("MessageSend", "Home", new { room_ID = Model.chatroom,  user_ID = Model.userID }, FormMethod.Post))
    {
    @Html.TextBoxFor(model => model.sentMessage, new { @id ="inputmessage", @class = "form-control", @placeholder = "Put your message here", autocomplete = "off" })

    <input type="submit" value="Send" class="btn-register" style="background-color:#B45F04; font-size:15px;
            text-align:center; width: 100px; height:40px; padding:10px  20px 10px 20px; margin-top: 12px;
            border-radius: 4px; color: white" />  <br />
    }

</div>

<script src="https://code.jquery.com/jquery-1.9.1.js"></script>
<script>    
    $('btn-register').click(function () {
        $('inputmessage').val('');
    });
</script>





